# Set default behavior to automatically normalize line endings
* text=auto

# Force specific file types to use LF (Unix-style) line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.css text eol=lf

# Husky files and shell scripts should use LF
.husky/* text eol=lf
.husky/pre-push text eol=lf
.husky/pre-commit text eol=lf
.husky/commit-msg text eol=lf

# Package files should use LF
package.json text eol=lf
package-lock.json text eol=lf

# Config files should use LF
.prettierrc text eol=lf
.eslintrc* text eol=lf
*.config.* text eol=lf

# Force binary files to be binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
